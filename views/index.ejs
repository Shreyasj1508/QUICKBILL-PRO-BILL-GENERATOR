<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <title>Billing System</title>

    <style>
      body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        min-height: 100vh;
      }

      .form-section {
        background: #fff;
        padding: 32px 24px;
        border-radius: 18px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        margin-bottom: 24px;
      }

      .item-list-box {
        max-height: 400px;
        overflow-y: auto;
        background: #f7fafd;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      }

      .item-entry {
        border-bottom: 1px solid #e3e6ea;
        padding: 12px 0;
        font-size: 1.08rem;
      }

      .btn-add {
        margin-top: 32px;
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        border: none;
        color: #fff;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(78,84,200,0.12);
      }

      .btn-add:hover {
        background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
        color: #fff;
      }

      .btn-success {
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        border: none;
        color: #fff;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(67,233,123,0.12);
      }

      .btn-success:hover {
        background: linear-gradient(90deg, #38f9d7 0%, #43e97b 100%);
        color: #fff;
      }

      h4, h5 {
        color: #4e54c8;
        font-weight: 700;
      }
      label.form-label {
        font-weight: 500;
        color: #333;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header.ejs'); %>

    <div class="container mt-5">
  <form id="billingForm" class="row g-4 justify-content-center" action="/submit" method="post">
        <!-- Left Column -->
        <div class="col-md-7">
          <div class="form-section shadow-lg">
            <h4 class="mb-4 text-center">Customer Details</h4>

            <div class="mb-3">
              <label class="form-label">Name</label>
              <input type="text" class="form-control rounded-pill px-3" name="Name" required />
            </div>

            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" class="form-control rounded-pill px-3" name="Email" required />
            </div>

            <div class="mb-3">
              <label class="form-label">Phone Number</label>
              <input type="text" class="form-control rounded-pill px-3" name="PhnNo" required />
            </div>

            <h5 class="mt-4 mb-3">Add Items</h5>

            <div class="row g-3 align-items-end">
              <div class="col-md-6">
                <label class="form-label">Item Description</label>
                <input type="text" class="form-control rounded-pill px-3" id="itemDesc" />
              </div>
              <div class="col-md-4">
                <label class="form-label">Amount</label>
                <input type="number" class="form-control rounded-pill px-3" id="itemAmount" />
              </div>
              <div class="col-md-2 text-end">
                <button
                  type="button"
                  class="btn btn-add w-100"
                  onclick="addItem()"
                >
                  Add
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-5">
          <div class="form-section item-list-box shadow-lg">
            <h5 class="mb-3 text-center">Item List</h5>
            <div id="itemList" class="mb-3"></div>

            <div class="text-end">
              <button type="submit" class="btn btn-success w-100 py-2 fs-5">
                <i class="bi bi-printer"></i> Save and Print
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- JS to handle item list -->
    <script>
      const itemList = document.getElementById("itemList");
      const billingForm = document.getElementById("billingForm");

      function addItem() {
        const desc = document.getElementById("itemDesc").value.trim();
        const amount = document.getElementById("itemAmount").value.trim();

        if (!desc || !amount) {
          alert("Please fill both Item Description and Amount.");
          return;
        }

        // Create HTML element for display
        const itemDiv = document.createElement("div");
        itemDiv.className = "item-entry d-flex justify-content-between";
        itemDiv.innerHTML = `<span>${desc}</span><strong>â‚¹${amount}</strong>`;
        itemList.appendChild(itemDiv);

        // Create hidden inputs to include in form
        const inputDesc = document.createElement("input");
        inputDesc.type = "hidden";
        inputDesc.name = "items[]";
        inputDesc.value = JSON.stringify({ description: desc, amount: amount });

        billingForm.appendChild(inputDesc);

        // Clear inputs
        document.getElementById("itemDesc").value = "";
        document.getElementById("itemAmount").value = "";
      }
    </script>
  </body>
</html>
