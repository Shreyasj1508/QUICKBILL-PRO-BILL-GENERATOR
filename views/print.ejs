<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
      @media print {
        .no-print {
          display: none;
        }
      }

      body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        padding: 40px;
        font-family: 'Segoe UI', Arial, sans-serif;
      }

      .invoice-box {
        padding: 36px 32px;
        border: 1px solid #e3e6ea;
        border-radius: 18px;
        background: #fff;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        max-width: 700px;
        margin: 0 auto;
      }

      .invoice-header {
        margin-bottom: 30px;
        color: #4e54c8;
      }

      .invoice-title {
        font-size: 2.2rem;
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 8px;
      }

      .invoice-meta {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 18px;
      }

      .invoice-items th, .invoice-items td {
        padding: 12px;
        border: 1px solid #e3e6ea;
        font-size: 1.08rem;
      }

      .invoice-items th {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        color: #fff;
        font-weight: 600;
      }

      .invoice-items tfoot th {
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        color: #fff;
        font-size: 1.1rem;
      }

      .customer-details {
        background: #f7fafd;
        border-radius: 10px;
        padding: 18px 24px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      }

      .customer-details p {
        margin-bottom: 6px;
        font-size: 1.08rem;
      }

      .btn-secondary {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        border: none;
        color: #fff;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(78,84,200,0.12);
      }
      .btn-secondary:hover {
        background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
        color: #fff;
      }
    </style>
  </head>
  <body onload="window.print()">
    <div class="container invoice-box">
      <div class="invoice-header text-center">
        <div class="invoice-title"><i class="bi bi-receipt"></i> Invoice</div>
        <div class="invoice-meta">Thank you for your business!</div>
      </div>

      <div class="customer-details mb-4">
        <p><strong>Name:</strong> <%= Name %></p>
        <p><strong>Email:</strong> <%= Email %></p>
        <p><strong>Phone Number:</strong> <%= PhnNo %></p>
      </div>

      <table class="table invoice-items">
        <thead>
          <tr>
            <th>Item Description</th>
            <th>Amount (₹)</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% items.forEach(item => { 
              const parsed = JSON.parse(item);
              total += Number(parsed.amount);
          %>
            <tr>
              <td><%= parsed.description %></td>
              <td><%= parsed.amount %></td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <th>Total</th>
            <th>₹<%= total.toFixed(2) %></th>
          </tr>
        </tfoot>
      </table>

      <div class="text-center mt-4 no-print">
        <a href="/" class="btn btn-secondary px-4 py-2"><i class="bi bi-arrow-left"></i> Back to Home</a>
      </div>
    </div>
  </body>
</html>
